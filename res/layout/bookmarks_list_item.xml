<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/search_view_drawer"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_view_drawer">

            <TextView
                android:id="@+id/url_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_del_bookmark"
                android:textColor="@color/primaryTextColor"
                android:maxLines="1"
                android:text="Title" />

            <TextView
                android:id="@+id/url_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/url_title"
                android:layout_marginTop="-4dp"
                android:layout_toLeftOf="@id/btn_del_bookmark"
                android:maxLines="1"
                android:text="link"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/btn_del_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/url_title"
                android:layout_alignBottom="@id/url_link"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="-16dp"
                app:srcCompat="@android:drawable/btn_dialog" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>